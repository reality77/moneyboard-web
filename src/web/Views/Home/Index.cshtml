@model IEnumerable<dto.Model.AccountBase>
@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
  <div class="row">

        <div class="col-12 col-md-6 col-lg-4">
            <h2>Vos avoirs</h2>
            <span>@($"{ViewBag.TotalBalance:0.00} €")</span>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <h2>Comptes</h2>
            <div>
                <ul>
                    @foreach(var acc in Model)
                    {
                        <li><a asp-controller="Accounts" asp-action="Transactions" asp-route-id="@acc.Id">@acc.Name</a> : @($"{acc.Balance:0.00} €")</li>
                    }
                </ul>
                <span class="little">Mis à jour @($"{ViewBag.Updated:g}")</span>
            </div>
        </div>
    </div>
</div>